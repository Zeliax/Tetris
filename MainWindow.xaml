<Window x:Class="Tetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="_Game">
                <MenuItem Header="_New Game" />
                <MenuItem Header="_Pause Game" />
                <MenuItem Header="_Resume" />
            </MenuItem>
            <MenuItem Header="_Options">
                <MenuItem Header="_Gamemode">
                    <MenuItem Header="_Classic" />
                    <MenuItem Header="_Arcade" />
                    <MenuItem Header="_Rush" />
                    <MenuItem Header="_Survival" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Rules" />

            </MenuItem>
        </Menu>

    </Grid>

</Window>
